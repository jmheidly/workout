# Google OAuth (required for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App origin (controls OAuth redirects and cookie security)
ORIGIN=http://localhost:4000

# Resend (email delivery)
RESEND_API_KEY=re_your_api_key
FROM_EMAIL=noreply@yourdomain.com

# Stripe (billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_STARTER_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_TEAM_PRICE_ID=price_...

# WebAuthn (required in production for 2FA)
WEBAUTHN_RP_ID=yourdomain.com
WEBAUTHN_ORIGIN=https://yourdomain.com

# Sentry (error monitoring â€” optional, degrades gracefully when absent)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=recipe-engine
SENTRY_ENVIRONMENT=production

# Client-side Sentry (PUBLIC_ prefix required by SvelteKit for client access)
PUBLIC_SENTRY_DSN=
